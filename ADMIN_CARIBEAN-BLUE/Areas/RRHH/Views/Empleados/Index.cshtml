

@model IEnumerable<Aplicacion.EntidadesDto.EmpleadosDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutRRHH.cshtml";

}


<h1l class="mt-4">Listado Empleados</h1l>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Dashboard</li>
</ol>

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Empleados
    </div>
    <div class="card-body">
        <div class="text-danger" asp-validation-summary="ModelOnly">
        </div>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nombres</th>
                        <th>Apellido1</th>
                        <th>Cedula</th>
                        <th>Correo</th>

                        <th></th>

                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count() == 0)
                    {
                        <tr>
                            <td colspan="4" class="text-center">No hay empleados</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.Id</td>
                                <td>@user.Nombres</td>
                                <td>@user.Apellido1</td>
                                <td>@user.Cedula</td>
                                <td>@user.Correo</td>

                                <td>
                                    <form  asp-route-id="@user.Id" method="post">

                                        <a class="btn btn-sm btn-success" asp-action="Mostrar" asp-route-id="@user.Id">Ver</a>
                                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Editar</a>
                                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@user.Id">Eliminar</a>
                                       
                                    </form>
                                </td>
                            </tr>
                        }
                    }



                </tbody>
            </table>
            <a class="btn btn-sm btn-danger" asp-action="create">Agregar Nuevo</a>
        </div>
    </div>




